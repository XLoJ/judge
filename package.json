{
  "name": "@xloj/judge",
  "version": "0.0.1",
  "os": [
    "linux"
  ],
  "description": "XLorJudge is Competitive Programming Contest Judge Server for XLor Online Judge.",
  "author": "XLor",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.json",
    "build:prod": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:core": "yarn jest --config test-core.config.json",
    "test:polygon": "yarn jest --config test-polygon.config.json"
  },
  "dependencies": {
    "crypto-random-string": "^3.3.0",
    "fastify": "^3.9.2",
    "fastify-amqp": "^0.5.0",
    "fastify-env": "^2.1.0",
    "fastify-swagger": "^3.5.0",
    "fluent-json-schema": "^2.0.3",
    "hyperid": "^2.1.0",
    "pino": "^6.9.0",
    "pino-pretty": "^4.3.0",
    "rimraf": "^3.0.2",
    "userid": "^1.0.0-beta.6"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.17",
    "@types/pino": "^6.3.4",
    "@types/rimraf": "^3.0.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testPathIgnorePatterns": [
      "src/core"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
